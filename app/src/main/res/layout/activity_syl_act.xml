<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradient_color">

    <TextView
        android:id="@+id/TEXT1_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Content:"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#404040"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_slab"
        android:layout_marginTop="60dp" />


    <CheckBox
        android:id="@+id/checkBox_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="40dp"
        android:text="@string/a"
        android:textColor="#404040"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:buttonTint="#FFFF"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/checkBox1_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/b"
        android:layout_marginTop="10dp"
        android:textColor="#404040"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:buttonTint="#FFFF"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/checkBox2_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:textColor="#404040"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:buttonTint="#FFFF"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/checkBox3_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/e"
        android:layout_marginTop="10dp"
        android:textColor="#404040"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:buttonTint="#FFFF"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/checkBox4_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/d"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:textColor="#404040"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:buttonTint="#FFFF"
        android:layout_marginLeft="20dp"/>

    <CheckBox
        android:id="@+id/checkBox5_stu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/f"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:textColor="#404040"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:buttonTint="#FFFF"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/DWNLD_stu"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#ffff"
        android:textSize="18sp"
        app:fontFamily="@font/roboto_slab"
        android:text="Download"
        android:inputType="text"
        android:background="@drawable/button_shape"
        />
</LinearLayout>
